# Generic App Config
PORT=3333
NODE_ENV=development
BASE_URL=http://localhost:3333

# Logging
LOG_LEVEL=debug        # debug | info | warn | error
LOG_FORMAT=pretty      # json | pretty

# Database
DB_SOCKET_TIMEOUT_MS=45000
DB_ADDRESS=mongodb://localhost:27017/mash_app  # must start with mongodb://

# Security
# Optional - comma separated list, e.g: https://a.com,https://b.com
# ALLOWED_ORIGINS=http://localhost

# Password hashing strength (rounds)
BCRYPT_SALT=10         # integer 1-20

# JWT Configuration
JWT_ALGORITHM=HS384    # HS256 | HS384 | HS512
JWT_SECRET=REPLACE_ME_WITH_A_SECURE_SECRET_MIN_32_CHARS_IN_PROD
JWT_EXP_SECONDS=604800 # 7 days (in seconds)
